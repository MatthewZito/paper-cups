{
  "include": [
    "src",
		"test"
  ],
  "compilerOptions": {
		"composite": true,
		"rootDir": "src",
    "declaration": true,
    "declarationDir": ".build",
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext", "WebWorker"],
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
